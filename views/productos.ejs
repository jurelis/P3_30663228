<!DOCTYPE html>
<html lang="es">
<head>

  <meta charset="UTF-8">
  <title>Fit_Life-Productos</title>
  <link rel="stylesheet" type="text/css" href="/css/producto.css">
  <link rel="icon" type="image/x-icon" href="/img/limpieza.jpg" />
  <link rel="stylesheet" type="text/css" href="/css/comprasMediaScreen.css">
  
</head>
  
<body>

<div id='botonera'>
    
    <a href="/logout2" class='botonProductos' style="color: rgb(235, 120, 216);">Cerrar</a>
    <a href="/usuarios" class='botonProductos' style="color: rgb(235, 120, 216);">Users</a>
    <a href="/compras" class='botonProductos' style="color: rgb(235, 120, 216);">Compras</a>
    <a href="/productos" class='botonProductos' style="color: rgb(235, 120, 216);">Productos</a>
    <a href='/categorias' class='botonProductos' style="color: rgb(235, 120, 216);">Categorias</a>

  </div>
  <h1 style="font-family: sans-serif;" style="color: rgb(235, 120, 216);">Productos</h1>
  <div class="table">
    <table border>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Codigo</th>
            <th>Precio</th>
            <th>Descripcion</th>
            <th>Calidad</th>
            <th>Cantidad</th>
            <th>Categoria</th>
            <th><a href="/add"><img src="/img/add.png" id='add'></a></th>
          </tr>
          <%for(const producto of modelo){%>
            <tr>
              <td><%=producto.producto_id%></td>
              <td><%=producto.nombre%></td>
              <td><%=producto.codigo%></td>
              <td><%=producto.precio%></td>
              <td><%=producto.descripcion%></td>
              <td><%=producto.calidad%></td>
              <td><%=producto.cantidad%></td>
              <td><%=producto.categoria_id%></td>
              <td class="icon">
              <a href="/update/<%= producto.producto_id%>"><img src="/img/update.png" width="30"></a>
              <a href="/delete/<%= producto.producto_id%>"><img src="/img/delete.png" width="30" id="delete"></a>
              <a href="/addImagen/<%= producto.producto_id%>"><img src="/img/img.png" width="30"></a>
             </td>
            </tr>
           <%}%>
        </table>
       
  </div>
 
</body>
</html>
